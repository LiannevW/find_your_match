<div class="row">

  <div class="col-md-9">
    <div class="panel panel-primary">

      <div class="panel-body">

        <div class="row">
          <div class="col-md-5">
            <% if @matches %>
              <h4>Today's couples are:
              </h4>
              <% @matches.each do |match| %>
                <%= match.users[0].profile.full_name %>
                +
                <%= match.users[1].profile.full_name %>
              <% end %>

            <% end %>

            <% if @match %>
              <h4>You pair today is:
              </h4>
              <%= @match.users[1].profile.full_name %>
            <% end %>
          </div>
        </div>

      </div>

    </div>
    <% if @users %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          Here you can change the status of the users:
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-5">
              <% @users.each do |user| %>
                <h4><%= link_to user.full_name, root_path %></h4>
                <label class="admin-select">
                  <%= check_box_tag 'is_admin', user.profile.is_admin, true %>
                  <h5>Student
                  </h5>
                </label>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    <% end %>
  </div>

</div>
